<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<h2>Title:</h2>
<p><%= @book.title %></p>
<h2>Body:</h2>
<p><%= @book.body %></p>
<%= link_to "back", '/todolists' %>
<%= link_to "edit", edit_todolist_path(@book.id) %>
<%= link_to "destroy", destroy_todolist_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
