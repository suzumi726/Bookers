<% if flash[:alert] %>
  <div class="flash">
    <%= flash[:alert] %>
  </div>
<% end %>
<h1>New book</h1>
<%= form_with model: @book, url:'/todolists', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
  <%= link_to "back", '/todolists' %>
<% end %>
