<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.title, todolist_path(book.id) %>
        </td>
        <td>
          <%= link_to book.body, todolist_path(book.id) %>
        </td> 
        <td>
          <%= link_to "Show", todolist_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_todolist_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", destroy_todolist_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <br>
    <% end %>
  </tbody>
</table>

<br>
<h3>New book</h3>
<%= form_with model: @book, url:'/todolists', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>
